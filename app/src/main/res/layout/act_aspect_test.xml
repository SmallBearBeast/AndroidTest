<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
	<LinearLayout
			android:orientation="vertical"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toTopOf="@+id/ll_1"
			app:layout_constraintVertical_weight="1"
			android:layout_width="match_parent"
			android:layout_height="0dp">
		<TextView
				android:id="@+id/tv_text_1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>
		
		<TextView
				android:layout_marginTop="@dimen/dp_20"
				android:id="@+id/tv_text_2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>
		
		<TextView
				android:layout_marginTop="@dimen/dp_20"
				android:id="@+id/tv_text_3"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>
		
		<TextView
				android:layout_marginTop="@dimen/dp_20"
				android:id="@+id/tv_text_4"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>
		
		<TextView
				android:layout_marginTop="@dimen/dp_20"
				android:id="@+id/tv_text_5"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>
	</LinearLayout>
	
	<LinearLayout
			android:id="@+id/ll_1"
			app:layout_constraintBottom_toTopOf="@+id/ll_2"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="50dp">
		<Button
				android:onClick="onClick"
				android:id="@+id/bt_1"
				android:text="BT_1"
				android:layout_weight="1"
				android:layout_width="0dp"
				android:layout_height="match_parent"/>
		<Button
				android:onClick="onClick"
				android:id="@+id/bt_2"
				android:text="BT_2"
				android:layout_weight="1"
				android:layout_width="0dp"
				android:layout_height="match_parent"/>
		<Button
				android:onClick="onClick"
				android:id="@+id/bt_3"
				android:text="BT_3"
				android:layout_weight="1"
				android:layout_width="0dp"
				android:layout_height="match_parent"/>
		<Button
				android:onClick="onClick"
				android:id="@+id/bt_4"
				android:text="BT_4"
				android:layout_weight="1"
				android:layout_width="0dp"
				android:layout_height="match_parent"/>
	</LinearLayout>
	<LinearLayout
			android:id="@+id/ll_2"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="50dp">
		<Button
				android:onClick="onClick"
				android:id="@+id/bt_5"
				android:text="BT_5"
				android:layout_weight="1"
				android:layout_width="0dp"
				android:layout_height="match_parent"/>
		<Button
				android:onClick="onClick"
				android:id="@+id/bt_6"
				android:text="BT_5"
				android:layout_weight="1"
				android:layout_width="0dp"
				android:layout_height="match_parent"/>
		<Button
				android:onClick="onClick"
				android:id="@+id/bt_7"
				android:text="BT_7"
				android:layout_weight="1"
				android:layout_width="0dp"
				android:layout_height="match_parent"/>
		<Button
				android:onClick="onClick"
				android:text="BT_8"
				android:id="@+id/bt_8"
				android:layout_weight="1"
				android:layout_width="0dp"
				android:layout_height="match_parent"/>
		<Button
				android:onClick="onClick"
				android:text="BT_9"
				android:id="@+id/bt_9"
				android:layout_weight="1"
				android:layout_width="0dp"
				android:layout_height="match_parent"/>
	</LinearLayout>
</android.support.constraint.ConstraintLayout>