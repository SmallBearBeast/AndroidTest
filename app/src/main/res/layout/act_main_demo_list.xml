<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText,MissingConstraints,SpUsage">

    <LinearLayout style="@style/ll_vertical">

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/TestContainerStyle">
            <TextView
                android:id="@+id/mediaDemoTextView"
                style="@style/TestLabelStyle"
                android:text="Media Demo" />

            <Button
                android:id="@+id/mediaDemoButton"
                style="@style/TestButtonStyle"
                android:text="Jump To MediaDemoAct"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mediaDemoTextView" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/TestContainerStyle">
            <TextView
                android:id="@+id/bizDemoTextView"
                style="@style/TestLabelStyle"
                android:text="Biz Demo" />

            <Button
                android:id="@+id/bizDemoButton"
                style="@style/TestButtonStyle"
                android:text="Jump To BizDemoAct"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bizDemoTextView" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/TestContainerStyle">
            <TextView
                android:id="@+id/libraryDemoTextView"
                style="@style/TestLabelStyle"
                android:text="Library Demo" />

            <Button
                android:id="@+id/libraryDemoButton"
                style="@style/TestButtonStyle"
                android:text="Jump To LibraryDemoAct"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/libraryDemoTextView" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/TestContainerStyle">
            <TextView
                android:id="@+id/otherDemoTextView"
                style="@style/TestLabelStyle"
                android:text="Other Demo" />

            <Button
                android:id="@+id/otherDemoButton"
                style="@style/TestButtonStyle"
                android:text="Jump To OtherDemoAct"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/otherDemoTextView" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/TestContainerStyle">
            <TextView
                android:id="@+id/anrTestTextView"
                style="@style/TestLabelStyle"
                android:text="AnrTestAct Demo" />

            <Button
                android:id="@+id/anrTestButton"
                style="@style/TestButtonStyle"
                android:text="Jump To AnrTestAct"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/anrTestTextView" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/TestContainerStyle">

            <TextView
                android:id="@+id/componentTextView"
                style="@style/TestLabelStyle"
                android:text="ComponentDemoAct Demo" />

            <Button
                android:id="@+id/componentTestButton"
                style="@style/TestButtonStyle"
                android:text="Jump To ComponentDemoAct"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/componentTextView" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/TestContainerStyle">

            <TextView
                android:id="@+id/flutterTextView"
                style="@style/TestLabelStyle"
                android:text="Flutter Test" />

            <Button
                android:id="@+id/flutterTestButton"
                style="@style/TestButtonStyle"
                android:text="Jump To FlutterTestAct"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/flutterTextView" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/TestContainerStyle">

            <TextView
                android:id="@+id/ARouterTextView"
                style="@style/TestLabelStyle"
                android:text="ARouter Test" />

            <Button
                android:id="@+id/ARouterTestButton"
                style="@style/TestButtonStyle"
                android:text="Use ARouter To Jump"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ARouterTextView" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/TestContainerStyle">

            <TextView
                android:id="@+id/floatServiceLabelTextView"
                style="@style/TestLabelStyle"
                android:text="Float Service Test" />

            <com.example.administrator.androidtest.widget.FlowLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/floatServiceLabelTextView">

                <Button
                    android:id="@+id/startFloatServiceButton"
                    style="@style/TestButtonStyle"
                    android:text="Start Float Service" />

                <Button
                    android:id="@+id/stopFloatServiceButton"
                    style="@style/TestButtonStyle"
                    android:text="Stop Float Service" />
            </com.example.administrator.androidtest.widget.FlowLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/TestContainerStyle">

            <TextView
                android:id="@+id/screenLabelTextView"
                style="@style/TestLabelStyle"
                android:text="Screen Test" />

            <Button
                android:id="@+id/screenTestButton"
                style="@style/TestButtonStyle"
                android:text="Jump Screen Test"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/screenLabelTextView" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/TestContainerStyle">

            <TextView
                android:id="@+id/kvCompareLabelTextView"
                style="@style/TestLabelStyle"
                android:text="KVCompare Test" />

            <Button
                android:id="@+id/kvCompareTestButton"
                style="@style/TestButtonStyle"
                android:text="Jump KVCompare Test"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/kvCompareLabelTextView" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/TestContainerStyle">

            <TextView
                android:id="@+id/fragLabelTextView"
                style="@style/TestLabelStyle"
                android:text="Frag Test" />

            <Button
                android:id="@+id/fragLifecycleTestButton"
                style="@style/TestButtonStyle"
                android:text="Jump FragLifecycle Test"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragLabelTextView" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/TestContainerStyle">

            <TextView
                android:id="@+id/bottomSheetLabelTextView"
                style="@style/TestLabelStyle"
                android:text="BottomSheet Test" />

            <Button
                android:id="@+id/bottomSheetTestButton"
                style="@style/TestButtonStyle"
                android:text="Jump Bottom Sheet Test"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bottomSheetLabelTextView" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/TestContainerStyle">

            <TextView
                android:id="@+id/busLabelTextView"
                style="@style/TestLabelStyle"
                android:text="Bus Test" />

            <Button
                android:id="@+id/busTestButton"
                style="@style/TestButtonStyle"
                android:text="Jump Bus Test"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/busLabelTextView" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/TestContainerStyle">

            <TextView
                android:id="@+id/aspectjLabelTextView"
                style="@style/TestLabelStyle"
                android:text="Aspect Test" />

            <Button
                android:id="@+id/aspectjTestButton"
                style="@style/TestButtonStyle"
                android:text="Jump Aspectj Test"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/aspectjLabelTextView" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/TestContainerStyle">

            <TextView
                android:id="@+id/dialogLabelTextView"
                style="@style/TestLabelStyle"
                android:text="Dialog Test" />

            <Button
                android:id="@+id/showCustomizeDialogButton"
                style="@style/TestButtonStyle"
                android:text="Show Customize Dialog"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dialogLabelTextView" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/bgServiceLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bg Service Test"
                android:textSize="@dimen/dp_18"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/startBgServiceButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Start"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bgServiceLabelTextView" />

            <Button
                android:id="@+id/stopBgServiceButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Stop"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/startBgServiceButton"
                app:layout_constraintTop_toBottomOf="@+id/bgServiceLabelTextView" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/spValLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SpVal Test"
                android:textSize="@dimen/dp_18"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/setSpValButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Set"
                android:textAllCaps="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spValLabelTextView" />

            <Button
                android:id="@+id/getSpValButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Get"
                android:textAllCaps="false"
                app:layout_constraintStart_toEndOf="@+id/setSpValButton"
                app:layout_constraintTop_toBottomOf="@+id/spValLabelTextView" />

            <TextView
                android:id="@+id/spValTipTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sp Val Tip"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/setSpValButton" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mmkvLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MMKV Test"
                android:textSize="@dimen/dp_18"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/spToMmkvButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Move To MMKV"
                android:textAllCaps="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mmkvLabelTextView" />

            <Button
                android:id="@+id/showMoveToMMKVButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Show"
                android:textAllCaps="false"
                app:layout_constraintStart_toEndOf="@+id/spToMmkvButton"
                app:layout_constraintTop_toBottomOf="@+id/mmkvLabelTextView" />

            <TextView
                android:id="@+id/tv_move_to_mmkv_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sp Val Tip"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spToMmkvButton" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/TestContainerStyle">

            <TextView
                android:id="@+id/viewDemoTextView"
                style="@style/TestLabelStyle"
                android:text="View Demo" />

            <Button
                android:id="@+id/viewDemoButton"
                style="@style/TestButtonStyle"
                android:text="Jump To ViewDemoAct"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewDemoTextView" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/TestContainerStyle">

            <TextView
                android:id="@+id/widgetDemoTextView"
                style="@style/TestLabelStyle"
                android:text="Widget Demo" />

            <Button
                android:id="@+id/widgetDemoButton"
                style="@style/TestButtonStyle"
                android:text="Jump To WidgetDemoAct"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/widgetDemoTextView" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</ScrollView>