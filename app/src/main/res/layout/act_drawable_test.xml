<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cl_black_t_1"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        
        <View
                android:id="@+id/v_test_1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="30dp"
                android:layout_width="100dp"
                android:layout_height="160dp"/>
        
        <View
                app:layout_constraintTop_toBottomOf="@+id/v_test_1"
                android:id="@+id/v_test_2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="30dp"
                android:layout_width="160dp"
                android:layout_height="100dp"/>
    
        <View
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@+id/v_test_2"
                android:id="@+id/v_test_3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="30dp"
                android:background="@drawable/bitmap_drawable_test"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>
    
        <View
                app:layout_constraintTop_toBottomOf="@+id/v_test_3"
                android:id="@+id/v_test_4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="30dp"
                android:background="@drawable/clip_drawable_test"
                android:layout_width="30dp"
                android:layout_height="30dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
