<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cl_white"
        xmlns:itv="http://schemas.android.com/tools">
    
    <FrameLayout
            android:id="@+id/fl_test_1"
            android:padding="@dimen/dp_40"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
                android:src="@drawable/search"
                android:tint="@color/cl_oriange"
                android:id="@+id/iv_test_1"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
    </FrameLayout>
    
    <FrameLayout
            android:id="@+id/fl_test_2"
            android:padding="@dimen/dp_40"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fl_test_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
                android:src="@drawable/search"
                android:id="@+id/iv_test_2"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
    </FrameLayout>
    
    <FrameLayout
            android:id="@+id/fl_test_3"
            android:padding="@dimen/dp_40"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fl_test_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tv_test_3"
                android:gravity="center"
                android:text="XIXIXI"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
    </FrameLayout>
    

    <LinearLayout
            android:id="@+id/ll_1"
            app:layout_constraintBottom_toTopOf="@+id/ll_2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
        <Button
                android:onClick="onClick"
                android:id="@+id/bt_1"
                android:text="BT_1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        <Button
                android:onClick="onClick"
                android:id="@+id/bt_2"
                android:text="BT_2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        <Button
                android:onClick="onClick"
                android:id="@+id/bt_3"
                android:text="BT_3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        <Button
                android:onClick="onClick"
                android:id="@+id/bt_4"
                android:text="BT_4"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
    </LinearLayout>
    
    <LinearLayout
            android:id="@+id/ll_2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
        <Button
                android:onClick="onClick"
                android:id="@+id/bt_add_two"
                android:text="ADD_TWO"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        <Button
                android:onClick="onClick"
                android:id="@+id/bt_remove_two"
                android:text="REMOVE_TWO"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        <Button
                android:onClick="onClick"
                android:id="@+id/bt_update"
                android:text="UPDATE"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        <Button
                android:onClick="onClick"
                android:text="PARTIAL_UPDATE"
                android:id="@+id/bt_partial_update"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        
        <Button
                android:onClick="onClick"
                android:text="MOVE"
                android:id="@+id/bt_move"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>