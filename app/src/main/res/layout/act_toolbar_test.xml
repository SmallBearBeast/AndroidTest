<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/lib_base_toolbar_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/MyToolBarTheme"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:navigationIcon="@android:drawable/checkbox_on_background"
        app:popupTheme="@style/MyToolbar.PopupTheme"
        app:subtitle="@string/app_name"
        app:subtitleTextAppearance="@style/MyToolbar.SubTitleText"
        app:subtitleTextColor="@color/cl_red_t_6"
        app:title="@string/app_name"
        app:titleTextAppearance="@style/MyToolbar.TitleText"
        app:titleTextColor="@color/cl_red">
        <!--        app:menu="@menu/menu_toolbar_test"-->

        <TextView
            style="@style/wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Hello"
            android:textSize="15sp" />
