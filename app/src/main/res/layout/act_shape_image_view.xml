<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.example.administrator.androidtest.Widget.ShapeImageView
            android:id="@+id/siv_1"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:scaleType="centerInside"
            android:src="@drawable/girl"
            app:siv_border_color="@color/cl_red_t_6"
            app:siv_border_width="15dp"
            app:siv_radius="15dp"
            app:siv_type="rectangle" />

        <com.example.administrator.androidtest.Widget.ShapeImageView
            android:id="@+id/siv_2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/test_pic_1"
            android:padding="5dp"
            app:siv_type="circle" />


        <com.example.administrator.androidtest.Widget.ShapeImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:scaleType="centerInside"
            android:src="@drawable/girl"
            app:siv_border_color="@color/cl_red_t_6"
            app:siv_border_width="15dp"
            app:siv_type="square" />

        <com.example.administrator.androidtest.Widget.ShapeImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:scaleType="centerInside"
            android:src="@drawable/girl"
            app:siv_border_color="@color/cl_red_t_6"
            app:siv_border_width="15dp"
            app:siv_polygon_side_num="5"
            app:siv_type="polygon" />

        <com.example.administrator.androidtest.Widget.ShapeImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:scaleType="centerInside"
            android:src="@drawable/girl"
            app:siv_border_color="@color/cl_red_t_6"
            app:siv_border_width="15dp"
            app:siv_polygon_side_num="6"
            app:siv_type="polygon" />


        <com.example.administrator.androidtest.Widget.ShapeImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:scaleType="centerInside"
            android:src="@drawable/girl"
            app:siv_border_color="@color/cl_red_t_6"
            app:siv_border_width="15dp"
            app:siv_polygon_side_num="7"
            app:siv_type="polygon" />


        <com.example.administrator.androidtest.Widget.ShapeImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:scaleType="centerInside"
            android:src="@drawable/girl"
            app:siv_border_color="@color/cl_red_t_6"
            app:siv_border_width="15dp"
            app:siv_polygon_side_num="8"
            app:siv_type="polygon" />

        <com.example.administrator.androidtest.Widget.ShapeImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:scaleType="centerInside"
            android:src="@drawable/girl"
            app:siv_border_color="@color/cl_red_t_6"
            app:siv_border_width="15dp"
            app:siv_polygon_side_num="10"
            app:siv_type="polygon" />

        <com.example.administrator.androidtest.Widget.ShapeImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:scaleType="centerInside"
            android:src="@drawable/girl"
            app:siv_border_color="@color/cl_red_t_6"
            app:siv_border_width="15dp"
            app:siv_polygon_side_num="16"
            app:siv_type="polygon" />

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/girl" />
    </LinearLayout>
</ScrollView>
