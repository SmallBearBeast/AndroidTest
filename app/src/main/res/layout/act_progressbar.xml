<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/cl_black_t_1"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ProgressBar
            android:indeterminate="false"
            android:progress="50"
            style="@style/Widget.AppCompat.ProgressBar"
            android:secondaryProgress="80"
            android:indeterminateDrawable="@drawable/delete"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
    
    <View
            android:id="@+id/v_rotate"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="30dp"
            android:background="@drawable/rotate_ring"
            app:layout_constraintTop_toBottomOf="@+id/progress_bar"
            android:layout_width="100dp"
            android:layout_height="160dp"/>
    
    <TextView
            app:layout_constraintTop_toBottomOf="@+id/v_rotate"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/bitmap_drawable_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>