<?xml version="1.0" encoding="utf-8"?>
<ScrollView
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/cl_black_t_1">
	<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
		<TextView
				android:textColor="@color/cl_white"
				android:background="@color/cl_red_t_6"
				android:gravity="center"
				android:text="Text_1"
				app:layout_constraintTop_toTopOf="parent"
				android:id="@+id/tv_test_1"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				android:layout_marginTop="30dp"
				android:layout_width="100dp"
				android:layout_height="60dp"/>
		<com.example.administrator.androidtest.Widget.RtlImageView
				app:layout_constraintTop_toBottomOf="@+id/tv_test_1"
				android:id="@+id/iv_image"
				android:src="@drawable/girl"
				android:layout_width="match_parent"
				android:layout_height="match_parent"/>
		
		<LinearLayout
				app:layout_constraintBottom_toBottomOf="parent"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="50dp">
			
			<Button
					android:id="@+id/bt_1"
					android:background="@color/cl_blue"
					android:text="bt_1"
					android:textColor="@color/cl_white"
					android:layout_weight="1"
					android:layout_width="0dp"
					android:layout_height="match_parent"/>
			
			<Button
					android:id="@+id/bt_2"
					android:background="@color/cl_oriange"
					android:text="bt_2"
					android:textColor="@color/cl_white"
					android:layout_weight="1"
					android:layout_width="0dp"
					android:layout_height="match_parent"/>
			
			<Button
					android:id="@+id/bt_3"
					android:background="@color/cl_green_9"
					android:text="bt_3"
					android:textColor="@color/cl_white"
					android:layout_weight="1"
					android:layout_width="0dp"
					android:layout_height="match_parent"/>
			
			<Button
					android:id="@+id/bt_4"
					android:background="@color/cl_red"
					android:text="bt_4"
					android:textColor="@color/cl_white"
					android:layout_weight="1"
					android:layout_width="0dp"
					android:layout_height="match_parent"/>
		</LinearLayout>
	</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
