<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout style="@style/ll_vertical">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="样式一" />

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="样式二" />

        <TextView
            android:id="@+id/tv_3"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="样式三" />

        <TextView
            android:id="@+id/tv_4"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="样式四" />

        <TextView
            android:id="@+id/tv_5"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="样式五" />


        <TextView
            android:id="@+id/tv_6"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="样式六" />

        <TextView
            android:id="@+id/tv_7"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="样式七" />

        <TextView
            android:id="@+id/tv_8"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="样式八" />

        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/fl_1"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:visibility="gone" />

        <ToggleButton
            android:id="@+id/tb_1"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="10dp"
            android:stateListAnimator="@null"
            android:textOff="样式一"
            android:textOn="样式一" />

        <ToggleButton
            android:id="@+id/tb_2"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="10dp"
            android:stateListAnimator="@null"
            android:textOff="样式二"
            android:textOn="样式二" />
    </LinearLayout>

</ScrollView>
